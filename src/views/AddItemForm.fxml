   <children>
      <Label layoutX="227.0" layoutY="26.0" text="Save Item - Item Section" textFill="#1c32d7">
         <font>
            <Font name="Behind The Scenery" size="31.0" />
         </font>
      </Label>
      <JFXTextField fx:id="txtItemCode" labelFloat="true" layoutX="61.0" layoutY="134.0" onKeyReleased="#txtFieldKeyReleased" prefHeight="31.0" prefWidth="188.0" promptText="Item Code" />
      <JFXTextField fx:id="txtDesc" labelFloat="true" layoutX="286.0" layoutY="134.0" onKeyReleased="#txtFieldKeyReleased" prefHeight="31.0" prefWidth="188.0" promptText="Description" />
